# Konfigurasi Aplikasi
APP_NAME=Subtrack
APP_ENV=development  # development, production, testing
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_PORT=8000

# Konfigurasi Database
# SQLite (untuk development)
DATABASE_URL=sqlite:///./subtrack.db

# PostgreSQL (untuk production)
# DATABASE_URL=postgresql://username:password@localhost:5432/subtrack

# Keamanan
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Notifications
MAIL_SERVER=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password
MAIL_FROM=noreply@subtrack.com
MAIL_TLS=true
MAIL_SSL=false

# Push Notifications (opsional)
PUSH_NOTIFICATION_KEY=your-push-notification-key

# Email Parser Settings (untuk fitur lanjutan)
IMAP_SERVER=imap.example.com
IMAP_PORT=993
IMAP_USERNAME=your-email@example.com
IMAP_PASSWORD=your-email-password
IMAP_USE_SSL=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/subtrack.log

# Timezone
TIMEZONE=Asia/Jakarta